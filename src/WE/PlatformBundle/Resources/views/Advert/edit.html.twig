{# src/OC/PlatformBundle/Resources/views/Advert/edit.html.twig #}

{% extends "WEPlatformBundle::layout.html.twig" %}

{% block title %}
  Modifier une annonce - {{ parent() }}
{% endblock %}

{% block weplatform_body %}

  <h2>Modifier une annonce</h2>

  {{ include("WEPlatformBundle:Advert:form-layout.html.twig") }}

  <p>
    Vous éditez une annonce déjà existante, merci de ne pas changer
    l'esprit générale de l'annonce déjà publiée.
  </p>

  <p>
    <a href="{{ path('we_platform_view', {'id': advert.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à l'annonce
    </a>
  </p>
  
  {#{ dump(advert) }#}

{% endblock %}